<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>uk.gov.moj.cpp.common</groupId>
        <artifactId>service-parent-pom</artifactId>
        <version>6.2.0</version>
    </parent>

    <groupId>uk.gov.moj.cpp.sjp</groupId>
    <artifactId>sjp-parent</artifactId>
    <version>1.0.76-ATCM-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <sonar.jacoco.itReportPath>${project.basedir}/../target/jacoco-it.exec</sonar.jacoco.itReportPath>
        <sonar.report.export.path>sonar-report.json</sonar.report.export.path>
        <sonar.scm.provider>git</sonar.scm.provider>
        <assignment.version>2.0.99</assignment.version>
        <material.version>2.0.112-ATCM-SNAPSHOT</material.version>
        <notification.notify.version>0.0.26</notification.notify.version>
        <referencedata.version>2.0.165-ATCM-SNAPSHOT</referencedata.version>
        <referencedata.offences.version>1.0.13</referencedata.offences.version>
        <resulting.version>2.0.212-ATCM-SNAPSHOT</resulting.version>
        <scheduling.version>2.0.88</scheduling.version>
        <authorisation.service.version>0.1.49</authorisation.service.version>
        <usersgroups.version>2.0.106</usersgroups.version>
        <access-control-sjp-providers.version>4.1.4-ATCM</access-control-sjp-providers.version>
        <cpp.framework.action.mapping.enabled>true</cpp.framework.action.mapping.enabled>
        <mvn.site.url>file://${project.build.directory}/site</mvn.site.url>
        <file.alfresco.version>2.3.0</file.alfresco.version>
        <coredomain.version>0.1.0</coredomain.version>
        <javax.el-api.version>3.0.0</javax.el-api.version>
        <joda-time.version>2.10</joda-time.version>
        <lombok.version>1.18.2</lombok.version>
        <activiti.library.version>1.3.0</activiti.library.version>
        <coredomain.version>0.1.0</coredomain.version>
    </properties>

    <modules>
        <module>sjp-viewstore</module>
        <module>sjp-domain</module>
        <module>sjp-event</module>
        <module>sjp-command</module>
        <module>sjp-query</module>
        <module>sjp-integration-test</module>
        <module>sjp-service</module>
        <module>sjp-json</module>
    </modules>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>external.atlassian.jgitflow</groupId>
                    <artifactId>jgitflow-maven-plugin</artifactId>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <archiveClasses>true</archiveClasses>
                    <attachClasses>true</attachClasses>
                </configuration>
            </plugin>
            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>
                <configuration>
                    <flowInitContext>
                        <masterBranchName>dev/sjp-release</masterBranchName>
                        <developBranchName>master</developBranchName>
                        <featureBranchPrefix>dev/sjp-feature-</featureBranchPrefix>
                        <releaseBranchPrefix>dev/sjp-release-</releaseBranchPrefix>
                        <hotfixBranchPrefix>dev/sjp-hotfix-</hotfixBranchPrefix>
                        <versionTagPrefix>sjp-tag-</versionTagPrefix>
                    </flowInitContext>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <enableSshAgent>true</enableSshAgent>
                    <pushReleases>true</pushReleases>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
        </dependency>
    </dependencies>

    <distributionManagement>
        <site>
            <id>site</id>
            <url>${mvn.site.url}</url>
        </site>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>uk.gov.moj.cpp.sjp</groupId>
                <artifactId>sjp-json</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
