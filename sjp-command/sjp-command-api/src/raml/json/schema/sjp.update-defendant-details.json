{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/command/sjp.update-defendant-details-api.json",
  "type": "object",
  "properties": {
    "title": {
      "enum":["Mr", "Mrs", "Ms", "Miss", "Co"]
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "dateOfBirth": {
      "type": "string"
    },
    "gender": {
      "enum": [
        "Male",
        "Female",
        "Not Specified"
      ]
    },
    "email": {
      "type": "string"
    },
    "address": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
    },
    "contactNumber": {
      "type": "object",
      "properties": {
        "home": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        }
      }
    },
    "nationalInsuranceNumber": {
      "type": "string"
    }
  },
  "required": [
    "firstName",
    "lastName",
    "gender"
  ]
}
