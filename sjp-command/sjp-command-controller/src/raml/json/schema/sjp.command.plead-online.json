{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "personalDetails": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
        },
        "contactDetails": {
          "type": "object",
          "properties": {
            "home": {
              "type": "string"
            },
            "mobile": {
              "type": "string"
            },
            "email": {
              "type": "string"
            }
          },
          "required": [
            "email"
          ],
          "additionalProperties": false
        },
        "dateOfBirth": {
          "type": "string"
        },
        "nationalInsuranceNumber": {
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "address",
        "contactDetails",
        "dateOfBirth"
      ],
      "additionalProperties": false
    },
    "offences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "plea": {
            "type": "string",
            "enum": ["NOT_GUILTY", "GUILTY"]
          },
          "comeToCourt": {
            "type": "boolean"
          },
          "mitigation": {
            "type": "string"
          },
          "notGuiltyBecause": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "plea"
        ],
        "additionalProperties": false
      }
    },
    "witnessDispute": {
      "type": "string"
    },
    "witnessDetails": {
      "type": "string"
    },
    "interpreterLanguage": {
      "type": "string"
    },
    "unavailability": {
      "type": "string"
    },
    "financialMeans": {
      "type": "object",
      "properties": {
        "income": {
          "type": "object",
          "properties": {
            "amount": {
              "type": "number"
            },
            "frequency": {
              "type": "string",
              "enum": ["WEEKLY", "FORTNIGHTLY", "MONTHLY", "YEARLY"]
            }
          },
          "required": [
            "amount",
            "frequency"
          ],
          "additionalProperties": false
        },
        "benefits": {
          "type": "object",
          "properties": {
            "claimed": {
              "type": "boolean"
            },
            "type": {
              "type": "string"
            },
            "deductPenaltyPreference": {
              "type": "boolean"
            }
          },
          "required": [
            "claimed"
          ],
          "additionalProperties": false
        },
        "employmentStatus": {
          "type": "string"
        }
      },
      "required": [
        "income",
        "benefits",
        "employmentStatus"
      ],
      "additionalProperties": false
    },
    "employer": {
      "type": "object",
      "properties": {
        "employeeReference": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
        }
      },
      "required": [
        "name",
        "address"
      ],
      "additionalProperties": false
    },
    "outgoings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "caseId",
    "defendantId",
    "personalDetails",
    "offences",
    "financialMeans"
  ],
  "additionalProperties": false
}