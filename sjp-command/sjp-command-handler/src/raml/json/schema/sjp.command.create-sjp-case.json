{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "",
  "type": "object",
  "properties": {
    "id": {
      "id": "/id",
      "type": "string"
    },
    "urn": {
      "id": "/urn",
      "type": "string"
    },
    "ptiUrn": {
      "id": "/ptiUrn",
      "type": "string"
    },
    "prosecutingAuthority": {
      "id": "/prosecutingAuthority",
      "type": "string",
      "enum": [
        "TFL",
        "TVL",
        "DVLA"
      ]
    },
    "initiationCode": {
      "id": "/initiationCode",
      "type": "string"
    },
    "summonsCode": {
      "id": "/summonsCode",
      "type": "string"
    },
    "libraOriginatingOrg": {
      "id": "/libraOriginatingOrg",
      "type": "string"
    },
    "libraHearingLocation": {
      "id": "/libraHearingLocation",
      "type": "string"
    },
    "dateOfHearing": {
      "id": "/dateOfHearing",
      "type": "string"
    },
    "timeOfHearing": {
      "id": "/timeOfHearing",
      "type": "string"
    },
    "costs": {
      "id": "/costs",
      "type": "number"
    },
    "postingDate": {
      "id": "/postingDate",
      "type": "string"
    },
    "defendant": {
      "id": "/defendant",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string"
        },
        "gender": {
          "description": "The person gender",
          "enum": ["Male", "Female", "Not Specified"]
        },
        "numPreviousConvictions": {
          "type": "integer"
        },
        "address": {
          "type": "object",
          "properties": {
            "address1": {
              "type": "string"
            },
            "address2": {
              "type": "string"
            },
            "address3": {
              "type": "string"
            },
            "address4": {
              "type": "string"
            },
            "postcode": {
              "type": "string"
            }
          }
        },
        "offences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "prosecutorCaseId": {
                "type": "string"
              },
              "offenceSequenceNo": {
                "type": "integer"
              },
              "libraOffenceCode": {
                "type": "string"
              },
              "chargeDate": {
                "type": "string"
              },
              "libraOffenceDateCode": {
                "type": "integer"
              },
              "offenceDate": {
                "type": "string"
              },
              "offenceWording": {
                "type": "string"
              },
              "prosecutionFacts": {
                "type": "string"
              },
              "witnessStatement": {
                "type": "string"
              },
              "compensation": {
                "type": "number"
              }
            },
            "required" : [
              "id",
              "prosecutorCaseId",
              "offenceSequenceNo",
              "libraOffenceCode",
              "chargeDate",
              "libraOffenceDateCode",
              "offenceDate",
              "offenceWording"
            ]
          }
        }
      }
    }
  },
  "required": [
    "urn",
    "id",
    "prosecutingAuthority",
    "postingDate",
    "defendant"
  ]
}
