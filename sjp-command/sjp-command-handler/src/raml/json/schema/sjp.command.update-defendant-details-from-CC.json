{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/command/sjp.update-defendant-details-from-CC.json",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "legalEntityName": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "string"
    },
    "gender": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/gender.json"
    },
    "email": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/email"
    },
    "email2": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/email"
    },
    "address": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
    },
    "contactNumber": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/contact-details.json"
    },
    "nationalInsuranceNumber": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "driverNumber": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/dvlaDriverLicence"
    },
    "driverLicenceDetails": {
      "type": "string"
    },
    "legalEntityDefendant": {
      "id": "http://justice.gov.uk/json/schemas/domains/sjp/command/plea/legal-entity-defendant.json",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
        },
        "contactDetails": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/contact-details.json"
        },
        "incorporationNumber": {
          "type": "string"
        },
        "position": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "address",
        "contactDetails"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "caseId",
    "defendantId"
  ]
}

