{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/event/defendant-accepted-aocp.json",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "personalDetails": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "address": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
        },
        "contactDetails": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/contact-details.json",
          "required": [
            "email"
          ]
        },
        "dateOfBirth": {
          "type": "string"
        },
        "nationalInsuranceNumber": {
          "type": "string"
        },
        "driverNumber": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/dvlaDriverLicence"
        },
        "driverLicenceDetails" : {
          "type" : "string"
        },
        "region" : {
          "type" : "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "address",
        "contactDetails",
        "dateOfBirth"
      ],
      "additionalProperties": false
    },
    "offences": {
      "type": "array",
      "items": {
        "id": "http://justice.gov.uk/json/schemas/domains/sjp/command/offence.json",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "plea": {
            "type": "string",
            "enum": ["NOT_GUILTY", "GUILTY", "AOCP_PENDING"]
          },

          "mitigation": {
            "type": "string"
          },
          "notGuiltyBecause": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "plea"
        ],
        "additionalProperties": false
      }
    },
    "aocpAccepted" : {
      "type": "boolean"
    },
    "method": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/plea-method.json"
    },
    "mitigation": {
      "type": "string"
    },
    "pleadDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date-time"
    },
    "caseUrn" : {
      "type": "string"
    }
  },
  "required": [
    "caseId",
    "defendantId",
    "offences",
    "method",
    "pleadDate",
    "caseUrn"
  ],
  "additionalProperties": false
}
