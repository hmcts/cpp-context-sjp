{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/events/sjp.press-transparency-pdf-report-generation-started.json",
  "type": "object",
  "properties": {
    "pressTransparencyReportId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "format": {
      "type": "string",
      "enum": [
        "PDF",
        "JSON"
      ]
    },
    "requestType": {
      "type": "string",
      "enum": [
        "FULL",
        "DELTA"
      ]
    },
    "language":{
      "enum":[
        "ENGLISH",
        "WELSH"
      ]
    },
    "title": {
      "type": "string"
    },
    "caseIds": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    }
  },
  "required": [
    "pressTransparencyReportId",
    "caseIds"
  ],
  "additionalProperties": false
}