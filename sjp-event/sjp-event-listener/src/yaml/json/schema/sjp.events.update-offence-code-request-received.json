{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/events/update-offence-code-request-received.json",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "updatedOffenceCodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "code": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "code"
        ]
      }
    }
  },
  "required": [
    "caseId",
    "updatedOffenceCodes"
  ],
  "additionalProperties": false
}
