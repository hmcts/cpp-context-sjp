{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "personId": {
      "description": "The person identifier",
      "type": "string"
    },
    "firstName": {
      "description": "The person fore name",
      "type": "string"
    },
    "lastName": {
      "description": "The person last name",
      "type": "string"
    },
    "dateOfBirth": {
      "description": "The person date of birth",
      "type": "string"
    },
    "address": {
      "description": "The person address",
      "type": "object",
      "properties": {
        "postCode": {
          "description": "The person post code",
          "type": "string"
        }
      }
    }
  }
}
