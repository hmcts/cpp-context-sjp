{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/progression/courts/prosecutionCasesReferredToCourt.json",
  "type": "object",
  "properties": {
    "sjpCourtReferral": {
      "type": "object",
      "properties": {
        "prosecutionCases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "$ref": "http://cpp.moj.gov.uk/core/domain/json/schema/data-types.json#/definitions/uuid"
              }
            },
            "required": [
              "id"
            ]
          }
        }
      },
      "required": [
        "prosecutionCases"
      ]
    },
    "rejectedReason": {
      "type": "string"
    }
  },
  "required": [
    "rejectedReason"
  ]
}