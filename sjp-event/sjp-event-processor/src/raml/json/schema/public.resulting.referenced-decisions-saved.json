{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "resultedOn": {
      "type": "string"
    },
    "sjpSessionId": {
      "type": "string"
    },
    "hearingDate": {
      "type": "string"
    },
    "verdict": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/verdict.json"
    },
    "accountDivisionCode": {
      "type": "integer"
    },
    "enforcingCourtCode": {
      "type": "integer"
    }
  },
  "offences": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": [
            "string",
            "null"
          ]
        },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "resultTypeId": {
                "type": "string"
              },
              "terminalEntries": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "index": {
                      "type": "integer"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "index",
                    "value"
                  ]
                }
              }
            },
            "required": [
              "code",
              "resultTypeId",
              "terminalEntries"
            ]
          }
        }
      },
      "required": [
        "results"
      ]
    }
  },
  "required": [
    "caseId",
    "resultedOn",
    "sjpSessionId"
  ]
}