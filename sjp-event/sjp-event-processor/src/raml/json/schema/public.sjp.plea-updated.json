{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/public/events/plea-updated.json",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "offenceId": {
      "type": "string"
    },
    "plea": {
      "enum": ["NOT_GUILTY", "GUILTY", "GUILTY_REQUEST_HEARING"]
    },
    "pleaMethod": {
      "enum": ["ONLINE", "POSTAL"]
    },
    "pleaDetails": {
      "type": "object"
    },
    "mitigation": {
      "type": "string"
    },
    "notGuiltyBecause": {
      "type": "string"
    },
    "witnessDispute": {
      "type": "string"
    },
    "witnessDetails": {
      "type": "string"
    },
    "unavailability": {
      "type": "string"
    },
    "updatedDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#date-time"
    }
  },
  "required": [
    "plea",
    "caseId",
    "offenceId"
  ],
  "additionalProperties": false
}