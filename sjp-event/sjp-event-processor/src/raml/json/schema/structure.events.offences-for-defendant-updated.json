{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "caseId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "offences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "offenceCode": {
            "type": "string"
          },
          "wording": {
            "type": "string"
          },
          "indicatedPlea": {
            "type": "string",
            "enum": ["NOT_GUILTY", "GUILTY", "NO_PLEA", "ACTUAL_GUILTY"]
          },
          "section": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "pattern": "^((([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13578]|1[02])\\-(0[1-9]|[12]\\d|3[01]))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13456789]|1[012])\\-(0[1-9]|[12]\\d|30))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-02\\-(0[1-9]|1\\d|2[0-8]))|(((1[6-9]|[2-9]\\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))\\-02\\-29))$"
          },
          "endDate": {
            "type": "string",
            "pattern": "^((([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13578]|1[02])\\-(0[1-9]|[12]\\d|3[01]))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-(0[13456789]|1[012])\\-(0[1-9]|[12]\\d|30))|(([\\+-]?\\d{4}(?!\\d{2}\\b))\\-02\\-(0[1-9]|1\\d|2[0-8]))|(((1[6-9]|[2-9]\\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))\\-02\\-29))$"
          },
          "orderIndex": {
            "type": "integer"
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "maximum":999
          }
        },
        "required": [
          "id",
          "offenceCode",
          "startDate"
        ]
      }
    }
  },
  "required": [
    "caseId",
    "defendantId",
    "offences"
  ]
}