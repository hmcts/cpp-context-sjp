{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/material.material-added.json",
  "type": "object",
  "properties": {
    "materialId": {
      "type": "string"
    },
    "fileDetails": {
      "type": "object",
      "properties": {
        "fileName": {
          "type": "string"
        }
      },
      "required": [
        "fileName"
      ],
      "oneOf": [
        {
          "properties": {
            "alfrescoAssetId": {
              "type": "string"
            },
            "mimeType": {
              "type": "string"
            }
          },
          "required": [
            "alfrescoAssetId",
            "mimeType"
          ]
        },
        {
          "properties": {
            "externalLink": {
              "type": "string"
            }
          },
          "required": [
            "externalLink"
          ]
        }
      ]
    },
    "materialAddedDate": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "materialId",
    "fileDetails",
    "materialAddedDate"
  ]
}