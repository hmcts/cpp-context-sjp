{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/sjp/json/schema/event/public.sjp.pending-cases-public-list-generated.json",
  "type": "object",
  "properties": {
    "requestType": {
      "enum": [
        "FULL",
        "DELTA"
      ]
    },
    "language": {
      "enum": [
        "ENGLISH",
        "WELSH",
        "BI_LINGUAL"
      ]
    },
    "listPayload": {
      "type": "object",
      "properties": {
        "generatedDateAndTime": {
          "type": "string"
        },
        "totalNumberOfRecords": {
          "type": "integer"
        },
        "startDate": {
          "type": "string"
        },
        "readyCases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "defendantName": {
                "type": "string"
              },
              "prosecutorName": {
                "type": "string"
              },
              "legalEntityName": {
                "type": "string"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "postcode": {
                "type": "string"
              },
              "sjpOffences": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "required": [
        "generatedDateAndTime",
        "totalNumberOfRecords",
        "readyCases"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "language",
    "listPayload"
  ],
  "additionalProperties": false
}