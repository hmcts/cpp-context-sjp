{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id":"http://cpp.moj.gov.uk/sjp/json/schema/event/public.sjp.press-transparency-report-generated.json",
  "type":"object",
  "properties":{
    "requestType": {
      "type": "string",
      "enum": [
        "FULL",
        "DELTA"
      ]
    },
    "language":{
      "enum":[
        "ENGLISH",
        "WELSH",
        "BI_LINGUAL"
      ]
    },
    "listPayload":{
      "type":"object",
      "properties":{
        "generatedDateAndTime":{
          "type":"string"
        },
        "totalNumberOfRecords":{
          "type":"integer"
        },
        "readyCases":{
          "type":"array",
          "items":{
            "type":"object",
            "properties":{
              "caseUrn":{
                "type":"string"
              },
              "defendantName":{
                "type":"string"
              },
              "dateOfBirth":{
                "type":"string"
              },
              "age":{
                "type":"string"
              },
              "prosecutorName":{
                "type":"string"
              },
              "legalEntityName":{
                "type":"string"
              },
              "title":{
                "type":"string"
              },
              "firstName":{
                "type":"string"
              },
              "lastName":{
                "type":"string"
              },
              "addressLine1":{
                "type":"string"
              },
              "addressLine2":{
                "type":"string"
              },
              "addressLine3":{
                "type":"string"
              },
              "town":{
                "type":"string"
              },
              "county":{
                "type":"string"
              },
              "postcode":{
                "type":"string"
              },
              "sjpOffences":{
                "type":"array",
                "items":{
                  "type":"object",
                  "properties":{
                    "title":{
                      "type":"string"
                    },
                    "wording":{
                      "type":"string"
                    },
                    "reportingRestriction":{
                      "type":"boolean"
                    },
                    "pressRestrictionName":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "required":[
        "generatedDateAndTime",
        "totalNumberOfRecords",
        "readyCases"
      ]
    }
  },
  "required":[
    "language",
    "listPayload"
  ]
}