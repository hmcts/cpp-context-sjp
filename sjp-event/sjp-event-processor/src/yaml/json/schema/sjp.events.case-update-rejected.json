{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/public/events/case-update-rejected.json",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "reason": {
      "enum": [
        "WITHDRAWAL_PENDING",
        "CASE_ASSIGNED",
        "CASE_COMPLETED",
        "OFFENCE_HAS_CONVICTION",
        "PLEA_ALREADY_SUBMITTED",
        "PLEA_REJECTED_AS_FINAL_DECISION_TAKEN_FOR_OFFENCE"]
    }
  },
  "required": [
    "caseId",
    "reason"
  ]
}