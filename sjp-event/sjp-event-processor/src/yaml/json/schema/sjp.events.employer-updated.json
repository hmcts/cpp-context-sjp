{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/events/employer-updated.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "employeeReference": {
      "type": "string",
      "maxLength": 20
    },
    "name": {
      "type": "string",
      "maxLength": 35
    },
    "phone": {
      "type": "string",
      "maxLength": 20
    },
    "address": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
    },
    "updatedByOnlinePlea": {
      "type": "boolean"
    },
    "updatedDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date-time"
    }
  },
  "required": [
    "defendantId"
  ],
  "additionalProperties": false
}
