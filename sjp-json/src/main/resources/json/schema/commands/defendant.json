{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/commands/defendant.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://cpp.moj.gov.uk/core/domain/json/schema/data-types.json#/definitions/uuid"
    },
    "title": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "string"
    },
    "gender": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/gender.json"
    },
    "numPreviousConvictions": {
      "type": "integer"
    },
    "driverNumber": {
      "type": "string"
    },
    "languageNeeds": {
      "type": "string"
    },
    "nationalInsuranceNumber": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/national-insurance-number.json"
    },
    "address": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/address.json"
    },
    "contactDetails": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/contact-details.json"
    },
    "offences": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/commands/offence.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "address"
  ]
}
