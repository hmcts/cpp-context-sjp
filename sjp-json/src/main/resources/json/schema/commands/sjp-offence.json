{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/commands/offence.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "offenceSequenceNo": {
      "type": "integer"
    },
    "libraOffenceCode": {
      "type": "string"
    },
    "chargeDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date"
    },
    "libraOffenceDateCode": {
      "type": "integer"
    },
    "offenceCommittedDate": {
      "type": "string"
    },
    "offenceWording": {
      "type": "string"
    },
    "offenceWordingWelsh": {
      "type": "string"
    },
    "prosecutionFacts": {
      "type": "string"
    },
    "witnessStatement": {
      "type": "string"
    },
    "compensation": {
      "type": "number"
    },
    "backDuty": {
      "type": "number"
    },
    "backDutyDateFrom": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date"
    },
    "backDutyDateTo": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date"
    },
    "vehicleMake": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/vehicleMake"
    },
    "vehicleRegistrationMark": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/vehicleRegistrationMark"
    },
    "endorsable" : {
      "type": "boolean"
    },
    "pressRestrictable" : {
      "type": "boolean"
    },
    "offenceTitle" : {
      "type": "string"
    },
    "offenceTitleWelsh" : {
      "type": "string"
    },
    "prosecutorOfferAOCP" : {
      "type": "boolean"
    },
    "isEligibleAOCP": {
      "type": "boolean"
    },
    "aocpStandardPenaltyAmount": {
      "type": "number"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "offenceSequenceNo",
    "libraOffenceCode",
    "chargeDate",
    "libraOffenceDateCode",
    "offenceCommittedDate",
    "offenceWording"
  ]
}
