{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/queries/ready-cases-reasons-counts.json",
  "type": "object",
  "properties": {
    "reasons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reason": {
            "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/case-readiness-for-decision-reason.json"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "reason", "count"
        ]
      }
    }
  },
  "required": [
    "reasons"
  ],
  "additionalProperties": false
}