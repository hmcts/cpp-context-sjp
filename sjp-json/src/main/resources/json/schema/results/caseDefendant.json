{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/results/caseDefendant.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://cpp.moj.gov.uk/core/domain/json/schema/data-types.json#/definitions/uuid"
    },
    "prosecutorReference": {
      "type": "string"
    },
    "individualDefendant": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/individualDefendant.json"
    },
    "corporateDefendant": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/corporateDefendant.json"
    },
    "parentGuardianDetails": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/basePersonDetail.json"
    },
    "offences": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/caseOffence.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "defendantId",
    "prosecutorReference",
    "offences"
  ]
}
