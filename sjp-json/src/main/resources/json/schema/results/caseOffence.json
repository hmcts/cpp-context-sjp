{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/results/caseOffence.json",
  "type": "object",
  "properties": {
    "baseOffenceDetails": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/baseOffence.json"
    },
    "initiatedDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date-time"
    },
    "plea": {
      "type": "object",
      "properties": {
        "pleaType": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/plea-type.json"
        },
        "pleaDate": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date-time"
        },
        "pleaMethod": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/plea-method.json"
        }
      }
    },
    "modeOfTrial": {
      "type": "integer"
    },
    "convictionDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/temporal.json#/definitions/date-time"
    },
    "convictingCourt": {
      "type": "integer"
    },
    "finding": {
      "type": "string"
    },
    "results": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/baseResult.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "baseOffenceDetails",
    "initiatedDate",
    "results"

  ]
}
