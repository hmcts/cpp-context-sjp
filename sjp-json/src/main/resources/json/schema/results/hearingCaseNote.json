{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/results/hearingCaseNote.json",
  "description": "The prosecution case notes entered at a hearing",
  "type": "object",
  "properties": {
    "originatingHearingId": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
    },
    "courtClerk": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName"
      ]
    },
    "prosecutionCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "noteDateTime": {
      "type": "string",
      "format": "date-time"
    },
    "noteType": {
      "type": "string",
      "enum": [
        "HMCTS",
        "LEGAL"
      ]
    },
    "note": {
      "type": "string"
    }
  },
  "required": [
    "originatingHearingId",
    "prosecutionCases",
    "noteDateTime",
    "noteType",
    "note",
    "courtClerk"
  ],
  "additionalProperties": false
}