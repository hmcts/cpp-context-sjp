{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/results/sharedHearing.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
    },
    "type": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/hearingType.json"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/jurisdictionType"
    },
    "reportingRestrictionReason": {
      "type": "string"
    },
    "hearingLanguage": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/hearingLanguage"
    },
    "hearingDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/hearingDay.json"
      }
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtCentre.json"
    },
    "judiciary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/judicialRole.json"
      }
    },
    "prosecutionCases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/prosecutionCase.json"
      }
    },
    "hasSharedResults": {
      "description": "Indicates that the hearing has at least one result shared",
      "type": "boolean"
    },
    "defendantReferralReasons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/referralReason.json"
      }
    },
    "prosecutionCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/prosecutionCounsel.json"
      }
    },
    "defenceCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/defenceCounsel.json"
      }
    },
    "defendantAttendance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/defendantAttendance.json"
      }
    },
    "sharedResultLines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/sharedResultLine.json"
      }
    },
    "hearingCaseNotes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/hearingCaseNote.json"
      }
    }
  },
  "required": [
    "id",
    "type",
    "jurisdictionType",
    "prosecutionCases",
    "hearingDays",
    "courtCentre",
    "sharedResultLines"
  ],
  "additionalProperties": false
}