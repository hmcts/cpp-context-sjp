{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/results/verdictresults.json",
  "description": "The verdict i.e. the court decision",
  "type": "object",
  "properties": {
    "originatingHearingId": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
    },
    "offenceId": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
    },
    "verdictDate": {
      "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/datePattern"
    },
    "verdictType": {
      "type": "object",
      "properties": {
        "verdictTypeId": {
          "description": "The identifier of the verdict type from reference data",
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
        },
        "sequence": {
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/positiveInteger"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "categoryType": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "jurors": {
      "type": "object",
      "properties": {
        "numberOfJurors": {
          "type": "integer"
        },
        "numberOfSplitJurors": {
          "type": "integer"
        },
        "unanimous": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "numberOfJurors",
        "numberOfSplitJurors",
        "unanimous"
      ]
    },
    "lesserOrAlternativeOffence": {
      "type": "object",
      "properties": {
        "offenceDefinitionId": {
          "description": "The identifier of the offence from reference data",
          "$ref": "http://justice.gov.uk/json/schemas/domains/sjp/results/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceCode": {
          "type": "string"
        },
        "offenceTitle": {
          "type": "string"
        },
        "offenceTitleWelsh": {
          "type": "string"
        },
        "offenceLegislation": {
          "type": "string"
        },
        "offenceLegislationWelsh": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "offenceDefinitionId",
        "offenceCode",
        "offenceTitle",
        "offenceLegislation"
      ]
    }
  },
  "required": [
    "originatingHearingId",
    "offenceId",
    "verdictDate",
    "verdictType"
  ],
  "additionalProperties": false
}