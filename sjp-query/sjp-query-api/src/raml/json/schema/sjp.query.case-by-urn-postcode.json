{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "address": {
      "type": "object",
      "properties": {
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "address3": {
          "type": "string"
        },
        "address4": {
          "type": "string"
        },
        "postCode": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "address1",
        "postCode"
      ]
    },
    "offence": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "legislation": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "pendingWithdrawal": {
          "type": "boolean"
        },
        "plea": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "legislation",
        "wording",
        "pendingWithdrawal"
      ]
    },
    "contactDetails": {
      "type": "object",
      "properties": {
        "home": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "personalDetails": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string"
        },
        "nationalInsuranceNumber": {
          "type": "string"
        },
        "contactDetails": {
          "$ref": "#/definitions/contactDetails"
        },
        "address": {
          "$ref": "#/definitions/address"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "firstName",
        "lastName",
        "dateOfBirth",
        "address"
      ]
    },
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "personalDetails": {
          "$ref": "#/definitions/personalDetails"
        },
        "offences": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/offence"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "personalDetails",
        "offences"
      ]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "urn": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    },
    "assigned": {
      "type": "boolean"
    },
    "defendant": {
      "$ref": "#/definitions/defendant"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "urn",
    "completed",
    "assigned",
    "defendant"
  ]
}
