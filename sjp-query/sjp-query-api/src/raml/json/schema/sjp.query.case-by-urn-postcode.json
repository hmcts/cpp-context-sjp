{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "address": {
      "type": "object",
      "properties": {
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "address3": {
          "type": "string"
        },
        "address4": {
          "type": "string"
        },
        "postCode": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "address1",
        "postCode"
      ]
    },
    "offence": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "pendingWithdrawal": {
          "type": "boolean"
        },
        "plea": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "wording",
        "pendingWithdrawal"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string"
        },
        "homeTelephone": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "nationalInsuranceNumber": {
          "type": "string"
        },
        "address": {
          "$ref": "#/definitions/address"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "firstName",
        "lastName",
        "dateOfBirth",
        "address"
      ]
    },
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "offences": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/offence"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "person",
        "offences"
      ]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    },
    "assigned": {
      "type": "boolean"
    },
    "defendants": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/defendant"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "completed",
    "assigned",
    "defendants"
  ]
}
