{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "defendants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "caseId": {
            "type": "string"
          },
          "personId": {
            "type": "string"
          },
          "interpreter":{
            "type": "object",
            "properties": {
              "needed": {
                "type": "boolean"
              },
              "language": {
                "type": "string"
              }
            }
          },
          "numPreviousConvictions": {
            "type": "integer"
          },
          "offences": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "offenceCode": {
                  "type": "string"
                },
                "plea": {
                  "type": "string"
                },
                "section": {
                  "type": "string"
                },
                "offenceSequenceNumber": {
                  "type": "integer"
                },
                "pleaMitigation": {
                  "type": "string"
                },
                "wording": {
                  "type": "string"
                },
                "sequenceNumber": {
                  "type": "integer"
                },
                "pendingWithdrawal": {
                  "type": "boolean"
                },
                "compensation": {
                  "type": "number"
                },
                "prosecutionFacts": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "chargeDate": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "offenceCode",
                "plea",
                "offenceSequenceNumber",
                "pleaMitigation",
                "wording",
                "sequenceNumber",
                "startDate"
              ]
            }
          }
        },
        "required": [
          "id",
          "caseId",
          "personId",
          "offences"
        ]
      }
    }
  },
  "required": [
    "defendants"
  ]
}