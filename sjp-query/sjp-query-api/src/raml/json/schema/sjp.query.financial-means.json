{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/query/financial-means.json",
  "type": "object",
  "properties": {
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "income": {
      "type": "object",
      "properties": {
        "frequency": {
          "enum": [
            "WEEKLY",
            "MONTHLY",
            "FORTNIGHTLY",
            "YEARLY"
          ]
        },
        "amount": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "benefits": {
      "type": "object",
      "properties": {
        "claimed": {
          "type": "boolean"
        },
        "type": {
          "type": "string"
        },
        "deductPenaltyPreference": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "employmentStatus": {
      "type": "string"
    }
  },
  "additionalProperties": false
}