{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/domains/sjp/queries/defendant.info.json",
  "type": "object",
  "properties": {
    "defendantDetails": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/defendantDetails"
      }
    }
  },
  "required": [
    "defendantDetails"
  ],
  "definitions": {
    "defendantDetails": {
      "type": "object",
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "caseId": {
          "description": "The prosecution case technical identifier.",
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "courtCentreId": {
          "description": "court centre Id.",
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "dateOfHearing": {
          "description": "Start date for single day hearing or day of hearing for multi-day hearing.",
          "type": "string"
        },
        "timeOfHearing": {
          "description": "Time of hearing.",
          "type": "string"
        },
        "firstName": {
          "description": "The first name of defendant.",
          "type": "string"
        },
        "lastName": {
          "description": "The last name of defendant.",
          "type": "string"
        },
        "dateOfBirth": {
          "description": "The date of birth  of defendant.",
          "type": "string"
        },
        "nationalInsuranceNumber": {
          "description": "The national insurance number of defendant.",
          "type": "string"
        },
        "legalEntityDefendantName": {
          "description": "The  name of  legal Entity.",
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "defendantId",
            "caseId",
            "lastName"
          ]
        },
        {
          "required": [
            "defendantId",
            "caseId",
            "legalEntityDefendantName"
          ]
        }
      ],
      "additionalProperties": false
    }
  }
}