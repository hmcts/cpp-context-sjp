{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "reasons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "enum": ["GUILTY", "PIA", "NOT_GUILTY", "GUILTY_REQUEST_HEARING", "WITHDRAWAL_REQUESTED"]
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "reason", "count"
        ]
      }
    }
  },
  "required": [
    "reasons"
  ],
  "additionalProperties": false
}