<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="10" author="tomaszp" logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">
        <addColumn tableName="case_details">
            <column name="assignee_id" type="uuid"></column>
        </addColumn>

        <dropColumn tableName="case_details" columnName="assigned"/>

        <rollback>
            <addColumn tableName="case_details">
                <column name="assigned" type="boolean" defaultValueBoolean="false"></column>
            </addColumn>
            <dropColumn tableName="case_details" columnName="assignee_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
