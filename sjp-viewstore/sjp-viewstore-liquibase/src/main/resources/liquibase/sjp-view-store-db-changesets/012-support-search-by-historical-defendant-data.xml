<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="12" author="krzysztofo" logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">
        <addColumn tableName="case_search_result">
            <column name="date_added" type="datetime"></column>
            <column name="deprecated" type="boolean" defaultValue="false"></column>
            <column name="current_first_name" type="text"></column>
            <column name="current_last_name" type="text"></column>
        </addColumn>
        <dropColumn tableName="case_search_result">
            <column name="post_code"></column>
        </dropColumn>
        <rollback>
            <addColumn tableName="case_search_result">
                <column name="post_code" type="text"></column>
            </addColumn>
            <dropColumn tableName="case_search_result">
                <column name="date_added"></column>
                <column name="deprecated"></column>
                <column name="current_first_name"></column>
                <column name="current_last_name"></column>
            </dropColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>
