<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="13" author="gregh" logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">

        <createTable tableName="pending_dates_to_avoid">
            <column name="case_id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="plea_date" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <addColumn tableName="case_details">
            <column name="dates_to_avoid" type="TEXT"></column>
        </addColumn>

    </changeSet>

</databaseChangeLog>