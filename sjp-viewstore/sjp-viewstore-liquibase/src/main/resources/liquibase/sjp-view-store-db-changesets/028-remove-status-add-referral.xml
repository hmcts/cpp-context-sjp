<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="28" author="adam.komisarek"
               logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">


        <dropColumn tableName="case_details">
            <column name="status"/>
        </dropColumn>

        <addColumn tableName="case_details">
            <column name="referred_for_court_hearing" type="boolean"/>
        </addColumn>

        <addColumn tableName="case_search_result">
            <column name="plea_type" type="text" />
        </addColumn>

        <rollback>
            <addColumn tableName="case_details">
                <column name="status" type="text"/>
            </addColumn>
            <dropColumn tableName="case_details">
                <column name="referred_for_court_hearing" />
            </dropColumn>
            <dropColumn tableName="case_search_result">
                <column name="plea_type" />
            </dropColumn>
        </rollback>

    </changeSet>

</databaseChangeLog>
