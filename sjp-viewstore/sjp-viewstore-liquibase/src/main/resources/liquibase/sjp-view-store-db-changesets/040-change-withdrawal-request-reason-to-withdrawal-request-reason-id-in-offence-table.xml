<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="40" author="ATCM"
               logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">

        <dropColumn tableName="offence">
            <column name="withdrawal_request_reason" />
        </dropColumn>

        <addColumn tableName="offence">
            <column name="withdrawal_request_reason_id" type="uuid" />
        </addColumn>

        <rollback>
            <dropColumn tableName="offence">
                <column name="withdrawal_request_reason_id" />
            </dropColumn>

            <addColumn tableName="offence">
                <column name="withdrawal_request_reason" type="text"/>
            </addColumn>
        </rollback>

    </changeSet>

</databaseChangeLog>
