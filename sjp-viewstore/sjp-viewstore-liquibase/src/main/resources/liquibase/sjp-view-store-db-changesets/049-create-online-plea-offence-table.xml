<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="49" author="team/ATCM/Mojo/resul.ceylan"
               logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">
        <createTable tableName="online_plea_detail">
            <column name="id" type="UUID">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="offence_id" type="UUID"/>
            <column name="defendant_id" type="UUID"/>
            <column name="case_id" type="UUID"/>
            <column name="plea" type="TEXT"/>
            <column name="mitigation" type="TEXT"/>
            <column name="not_guilty_because" type="TEXT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
