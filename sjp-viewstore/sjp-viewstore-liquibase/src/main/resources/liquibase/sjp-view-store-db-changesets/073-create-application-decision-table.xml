<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="73" author="team/ATCM/gustavo.rojas"
               logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">

        <createTable tableName="application_decision">

            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>

            <column name="granted" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="application_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="session_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="rejection_reason" type="text"/>
            <column name="out_of_time" type="boolean"/>
            <column name="out_of_time_reason" type="text"/>

            <column name="saved_at" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="application_decision" indexName="application_decision_application_id_idx">
            <column name="application_id" type="uuid"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="application_decision" indexName="application_decision_application_id_idx"/>
            <dropTable tableName="application_decision"/>
        </rollback>

    </changeSet>


</databaseChangeLog>