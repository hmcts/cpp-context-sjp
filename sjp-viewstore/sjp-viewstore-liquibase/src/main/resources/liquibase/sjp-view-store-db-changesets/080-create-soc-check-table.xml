<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="80" author="team/chachacha/manav.arora"
               logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">

        <createTable tableName="soc_check">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>

            <column name="case_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="checked_by" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="checked_at" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="soc_check" indexName="soc_check_case_id_idx">
            <column name="case_id" type="uuid"/>
        </createIndex>

        <rollback>
            <dropTable tableName="soc_check"/>
        </rollback>

    </changeSet>
</databaseChangeLog>