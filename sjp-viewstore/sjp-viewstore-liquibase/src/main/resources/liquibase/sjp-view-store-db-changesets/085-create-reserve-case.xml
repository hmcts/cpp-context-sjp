<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="085-create-reserve-case" author="ali" logicalFilePath="liquibase/sjp-view-store-db-changelog.xml">

        <createTable tableName="reserve_case">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="case_id" type="uuid">
                <constraints foreignKeyName="fk_reserve_case" referencedTableName="case_details" referencedColumnNames="id"/>
            </column>
            <column name="case_urn" type="text"/>
            <column name="reserved_by" type="uuid"/>
            <column name="reserved_at" type="datetime"/>
        </createTable>

        <createIndex tableName="reserve_case" indexName="reserve_case_case_id_idx">
            <column name="case_id" type="UUID"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
