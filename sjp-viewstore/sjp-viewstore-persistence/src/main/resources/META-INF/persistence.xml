<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="sjp-persistence-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/DS.sjp</jta-data-source>
        <!--
            TimestampConverter is required as H2 does not support the serialization of ZonedDateTime,
            it is required just into the test package. -> e.g. check PendingDatesToAvoidRepositoryTest
        -->
        <class>uk.gov.moj.cpp.sjp.persistence.entity.converter.TimestampConverter</class>
        <properties>
            <property name="jboss.as.jpa.providerModule" value="org.hibernate:5.2"/>
        </properties>
    </persistence-unit>

</persistence>